/* 水平间距 */
.my_pay_container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  padding-left: 5px;
}
.my_pay_container .radio {
  display: flex;
  align-items: center;
}
.my_pay_container .amount_box .amount {
  color: #C00000;
  font-weight: bold;
}
.my_pay_container .btn_pay {
  background-color: #C00000;
  height: 50px;
  color: white;
  line-height: 50px;
  padding: 0 10px;
  min-width: 100px;
  text-align: center;
}

