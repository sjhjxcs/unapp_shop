.address_choose_box {
  height: 90px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.address_info_box {
  font-size: 12px;
  height: 90px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5px;
}
.address_info_box .row1 {
  display: flex;
  justify-content: space-between;
}
.address_info_box .row1 .row1_right {
  display: flex;
  justify-content: space-between;
}
.address_info_box .row2 {
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.address_info_box .row2 .row2_left {
  white-space: nowrap;
}

