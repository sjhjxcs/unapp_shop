/* 水平间距 */
.goods_list {
  background-color: white;
}
.goods_list .goods_item {
  display: flex;
  flex-wrap: nowrap;
  border-bottom: 1px solid #F0F0F0;
}
.goods_list .goods_item .goods_item_left {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}
.goods_list .goods_item .goods_item_left .goods_pic {
  width: 100px;
  height: 100px;
  display: block;
}
.goods_list .goods_item .goods_item_right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.goods_list .goods_item .goods_item_right .goods_name {
  font-size: 12px;
  color: #333333;
  padding-bottom: 10px;
}
.goods_list .goods_item .goods_info_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_list .goods_item .goods_info_box .goods_price {
  font-size: 16px;
  color: #c00000;
}

