.scroll_view_container {
  display: flex;
}
.scroll_view_container .scroll_left {
  width: 120px;
}
.scroll_view_container .scroll_left .srcoll_left_item {
  line-height: 60px;
  text-align: center;
  font-size: 12px;
  background-color: #F7F7F7;
}
.scroll_view_container .scroll_left .srcoll_left_item.active {
  background-color: #FFFFFF;
  position: relative;
}
.scroll_view_container .scroll_left .srcoll_left_item.active::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 30px;
  background-color: #C00000;
  position: absolute;
  -webkit-transform: translateY(50%);
          transform: translateY(50%);
}
.scroll_view_container .cate_lv2_title {
  text-align: center;
  font-size: 12px;
  font-weight: bold;
  padding: 15px 0;
}
.scroll_view_container .cate_lv3_list {
  display: flex;
  flex-wrap: wrap;
}
.scroll_view_container .cate_lv3_list .cate_lv3_item {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10px;
}
.scroll_view_container .cate_lv3_list .cate_lv3_item image {
  width: 60px;
  height: 60px;
}
.scroll_view_container .cate_lv3_list .cate_lv3_item text {
  font-size: 12px;
}

